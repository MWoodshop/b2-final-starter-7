<%= render partial: "shared/nav" %>
<div class="header-section">
  <h3 class="discount-link"><%= link_to 'Create New Discount', new_merchant_discount_path(@merchant) %></h3>
  <div class="holidays-section">
    <% if @error_message %>
      <p class="error-message"><%= @error_message %></p>
    <% end %>
    <div class="holidays-wrapper">
      <h3>Upcoming Holidays in the USA:</h3>
      <div class="holidays">
        <% if defined?(@next_three_holidays) %>
          <% @next_three_holidays.each do |holiday| %>
            <div class="holiday">
              <h3><%= holiday['name'] %></h3>
              <p>Date: <%= holiday['date'] %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <p class='col-12'>My Discounts</p>
</div>
<table class="show-table">
  <tr>
    <th>Discount ID</th>
    <th>Percentage Discount</th>
    <th>Quantity Threshold</th>
    <th>Modify</th>
  </tr>
  <% @discounts.each do |discount| %>
    <tr id="discount-<%= discount.id %>">
      <td><%= link_to discount.id, merchant_discount_path(@merchant, discount) %></td>
      <td><%= discount.percentage_discount %></td>
      <td><%= discount.quantity_threshold %></td>
      <td>
        <%= button_to 'Delete', merchant_discount_path(@merchant, discount), method: :delete, class: "btn btn-primary" %></td>
    </tr>
  <% end %>
</table>
