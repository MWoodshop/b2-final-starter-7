<%= render partial: "shared/nav" %>
<h3><%= link_to 'Create New Discount', new_merchant_discount_path(@merchant) %></h3>
<div class="row">
  <p class='col-12'>My Discounts</p>
</div>
<table class="show-table">
  <tr>
    <th>Discount ID</th>
    <th>Percentage Discount</th>
    <th>Quantity Threshold</th>
    <th>Modify</th>
  </tr>
  <% @discounts.each do |discount| %>
    <tr id="discount-<%= discount.id %>">
      <td><%= link_to discount.id, merchant_discount_path(@merchant, discount) %></td>
      <td><%= discount.percentage_discount %></td>
      <td><%= discount.quantity_threshold %></td>
      <td>
        <%= button_to 'Delete', merchant_discount_path(@merchant, discount), method: :delete, class: "btn btn-primary" %></td>
    </tr>
  <% end %>
</table>
